{
    "mappings": {
        "tweet": {
            "_source": {
                "enabled": false
            },
            "numeric_detection": true,
            "_boost": {
                "name": "myboost",
                "null_value": 1.2
            },
            "_size": {
                "enabled": true
            },
            "_timestamp": {
                "enabled": true,
                "path": "post_date",
                "format": "YYYY-MM-dd"
            },
            "properties": {
                "_id": {
                    "type": "string",
                    "analyzer": "keyword",
                    "include_in_all": true,
                    "store": "yes"
                },
                "name": {
                    "type": "geo_point",
                    "lat_lon": true,
                    "geohash": true
                },
                "content": {
                    "type": "date",
                    "null_value": "no content"
                }
            }
        }
    }
}
